{
  "name": "@noita-explorer/tools",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "main": "dist/main.js",
  "module": "dist/main.js",
  "types": "dist/main.d.ts",
  "exports": {
    "./lua": {
      "types": "./dist/lua/main.d.ts",
      "import": "./dist/lua.es.js",
      "require": "./dist/lua.cjs.js"
    },
    "./xml": {
      "types": "./dist/xml/main.d.ts",
      "import": "./dist/xml.es.js",
      "require": "./dist/xml.cjs.js"
    },
    ".": {
      "types": "./dist/common/main.d.ts",
      "import": "./dist/common.es.js",
      "require": "./dist/common.cjs.js"
    }
  },
  "scripts": {
    "dev": "vite build --watch",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "generate-barrels": "barrelsby --config barrels.config.json",
    "pretest": "tsc --noEmit",
    "test": "NODE_OPTIONS=--experimental-vm-modules jest --verbose --coverage"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@types/color": "^4.2.0",
    "@types/luaparse": "^0.2.12",
    "@types/xml2js": "^0.4.14",
    "barrelsby": "^2.8.1",
    "jest": "^29.7.0",
    "ts-jest": "^29.3.4",
    "typescript": "~5.6.2",
    "vite": "^6.0.1",
    "vite-plugin-dts": "^4.3.0"
  },
  "dependencies": {
    "@noita-explorer/model": "*",
    "buffer": "^6.0.3",
    "color": "^4.2.3",
    "events": "^3.3.0",
    "luaparse": "^0.3.1",
    "xml2js": "^0.6.2"
  }
}
